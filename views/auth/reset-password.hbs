<div class="d-flex justify-content-center mt-4">
    <div class="card border m-3 shadow">
        <article class="card-body">
            <h4 class="card-title mb-4 mt-1">Reset password</h4>
            <hr>
            <form method="post" action="reset-password">
                <input name="token" type="hidden" value="{{token}}">
                <input name="email" type="hidden" value="{{email}}">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                        </div>
                        <input name="email-display" class="form-control" type="email" value="{{email}}" disabled>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                        </div>
                        <input name="password" class="form-control" placeholder="Password" type="password" required>
                    </div>
                     <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                        </div>
                        <input name="passwordConfirm" class="form-control" placeholder="Confirm password" type="password" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block"> Reset  </button>
                        </div>
                    </div>
                    <div class="col-md-6 text-right">
                        <a class="small" href="forget">Forgot password?</a>
                    </div>
                </div>
            </form>
        </article>
    </div>
</div>
